@inject Opdracht1.ViewModel.Rank rank;

<table class="table">
    <thead>
        <tr>
            <th scope="col">#Student Number</th>
            <th scope="col">Name</th>
            <th scope="col">Grade</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in rank.Top3Students())
        {
            <tr>
                <th scope="row">@student.ID</th>
                <td>@student.FirstName</td>
                <td>@student.Score</td>
            </tr>
        }
    </tbody>
</table>